<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:background="@color/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".mainScreen.News.SpecificNews">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarSpecificGame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/backgroundRed"
            app:titleTextColor="@color/text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/sivSpecificGame"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbarSpecificGame" />

        <Button
            android:id="@+id/btAddWishlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Добавить в избранное"
            android:textColor="@color/text"
            android:backgroundTint="@color/backgroundRed"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sivSpecificGame" />

        <TextView
            android:id="@+id/tvGenre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:text="Жанр:"
            android:textSize="20dp"
            android:textColor="@color/text"
            app:layout_constraintTop_toBottomOf="@+id/btAddWishlist"
            tools:layout_editor_absoluteX="16dp" />

        <TextView
            android:id="@+id/tvPlatform"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:text="Платформа:"
            android:textSize="20dp"
            android:textColor="@color/text"
            app:layout_constraintTop_toBottomOf="@+id/tvGenre"
            tools:layout_editor_absoluteX="-9dp" />

        <TextView
            android:id="@+id/tvDeveloper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:text="Разработчик:"
            android:textSize="20dp"
            android:textColor="@color/text"
            app:layout_constraintTop_toBottomOf="@+id/tvPlatform"
            tools:layout_editor_absoluteX="0dp" />


        <TextView
            android:id="@+id/tvPublisher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:text="Издатель:"
            android:textSize="20dp"
            android:textColor="@color/text"
            app:layout_constraintTop_toBottomOf="@+id/tvDeveloper"
            tools:layout_editor_absoluteX="0dp" />


        <TextView
            android:id="@+id/tvReleaseDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:text="Дата выпуска:"
            android:textSize="20dp"
            android:textColor="@color/text"
            app:layout_constraintTop_toBottomOf="@+id/tvPublisher"
            tools:layout_editor_absoluteX="-53dp" />

        <TextView
            android:id="@+id/tvDescriptionGame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:text="Лишь интерактивные прототипы, инициированные исключительно синтетически, своевременно верифицированы. Идейные соображения высшего порядка, а также понимание сути ресурсосберегающих технологий не оставляет шанса для благоприятных перспектив. Прежде всего, реализация намеченных плановых заданий обеспечивает актуальность укрепления моральных ценностей. Задача организации, в особенности же высокотехнологичная концепция общественного уклада требует анализа экономической целесообразности принимаемых решений. Однозначно, действия представителей оппозиции представлены в исключительно положительном свете. Как принято считать, сделанные на базе интернет-аналитики выводы и по сей день остаются уделом либералов, которые жаждут быть подвергнуты целой серии независимых исследований. Задача организации, в особенности же семантический разбор внешних противодействий не даёт нам иного выбора, кроме определения поставленных обществом задач. Повседневная практика показывает, что консультация с широким активом создаёт предпосылки для экспериментов, поражающих по своей масштабности и грандиозности."
            android:textSize="20dp"
            android:textColor="@color/text"
            app:layout_constraintTop_toBottomOf="@+id/tvReleaseDate"
            tools:layout_editor_absoluteX="44dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>